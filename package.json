{
  "name": "ocsolar-grid-desktop",
  "version": "1.0.0",
  "description": "OC Solar Grid Desktop - Standalone chat application",
  "main": "dist-electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href ./",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"ng serve --port 4201\" \"wait-on http://localhost:4201 && npm run electron:compile && electron .\"",
    "electron:build": "npm run build:prod && npm run electron:compile",
    "electron:build:mac": "npm run electron:build && electron-builder --mac",
    "electron:build:win": "npm run electron:build && electron-builder --win",
    "electron:start": "npm run electron:compile && electron ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.2.14",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/fire": "^16.0.0",
    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.2.14",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/router": "^16.1.0",
    "firebase": "^10.14.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.6",
    "@angular/cli": "~16.1.6",
    "@angular/compiler-cli": "^16.1.0",
    "@types/jasmine": "~4.3.0",
    "concurrently": "^9.2.1",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.1.3",
    "wait-on": "^9.0.3"
  }
}
